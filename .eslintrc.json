{
    "extends": [
        "airbnb",
        "jest-enzyme"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "flowtype",
        "jest"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
        "import/extensions": [2, "ignorePackages"],
        "import/no-unresolved": [2, { "ignore": ["json-api"] }]
    },
    "overrides": [
        {
            "files": [
                "**/{__tests__,__mocks__}/**/*.js"
            ],
            "globals": {
                "mount": false,
                "shallow": false
            },
            "env": {
                "jest/globals": true
            }
        }
    ],
    "settings": {
        "import/extensions": [
            ".js"
        ],
        "import/ignore": [
            "json-api"
        ]
    }
}
