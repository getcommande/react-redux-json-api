{
    "extends": [
        "airbnb",
        "jest-enzyme"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "flowtype",
        "jest"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js"] }]
    },
    "overrides": [
        {
            "files": [
                "**/{__tests__,__mocks__}/**/*.js"
            ],
            "globals": {
                "mount": false,
                "shallow": false
            },
            "env": {
                "jest/globals": true
            }
        }
    ]
}
